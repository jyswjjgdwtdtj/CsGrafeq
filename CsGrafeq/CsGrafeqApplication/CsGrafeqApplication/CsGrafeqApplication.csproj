        <PackageReference Include="LiveMarkdown.Avalonia" />
        <PackageReference Include="Material.Avalonia" />
        <PackageReference Include="Material.Avalonia.Dialogs" />
        <PackageReference Include="MessageBox.Avalonia.Markdown" />
        <PackageReference Include="ReactiveUI" />
        <PackageReference Include="SkiaSharp" />
        <PackageReference Include="SkiaSharp.HarfBuzz" />
        <PackageReference Include="Svg.Controls.Skia.Avalonia" />
        <PackageReference Include="Sylinko.CSharpMath.Avalonia" />
