<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <Nullable>enable</Nullable>
        <LangVersion>preview</LangVersion>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
        <IsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</IsWindows>
        <IsOSX Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))' == 'true'">true</IsOSX>
        <IsLinux Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' == 'true'">true</IsLinux>
        <InvariantGlobalization>false</InvariantGlobalization>
    </PropertyGroup>
    <PropertyGroup Condition="'$(IsWindows)'=='true'">
        <DefineConstants>Windows</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition="'$(IsOSX)'=='true'">
        <DefineConstants>OSX</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition="'$(IsLinux)'=='true'">
        <DefineConstants>Linux</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>
    <ItemGroup>
        <None Remove="Assets\camera.svg" />
        <None Remove="Assets\delete.svg" />
        <None Remove="Assets\Github.svg" />
        <None Remove="Assets\input.svg" />
        <None Remove="Assets\shape.svg" />
        <None Remove="Assets\slider.svg" />
        <None Remove="Fonts\MapleMono-CN-Regular.ttf" />
    </ItemGroup>
    <ItemGroup>
        <AvaloniaResource Include="Assets\avalonia-logo.ico" />
        <AvaloniaResource Include="Assets\calc.svg" />
        <AvaloniaResource Include="Assets\camera.svg" />
        <AvaloniaResource Include="Assets\favicon.ico" />
        <None Remove="Assets\csharp.svg" />
        <AvaloniaResource Include="Assets\csharp.svg" />
        <None Remove="Assets\error.svg" />
        <AvaloniaResource Include="Assets\error.svg" />
        <None Remove="Assets\folder.svg" />
        <AvaloniaResource Include="Assets\folder.svg" />
    </ItemGroup>

