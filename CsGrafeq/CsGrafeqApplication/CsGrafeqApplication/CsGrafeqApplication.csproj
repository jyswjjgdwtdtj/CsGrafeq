        <AvaloniaResource Include="Assets\delete.svg" />
        <AvaloniaResource Include="Assets\favicon.ico" />
        <AvaloniaResource Include="Assets\Github.svg" />
        <AvaloniaResource Include="Assets\input.svg" />
        <AvaloniaResource Include="Assets\shape.svg" />
        <AvaloniaResource Include="Assets\slider.svg" />
        <None Remove="Assets\csharp.svg" />
