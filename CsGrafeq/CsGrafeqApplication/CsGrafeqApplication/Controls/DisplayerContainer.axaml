<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CsGrafeqApplication.ViewModels"
             xmlns:addons="clr-namespace:CsGrafeqApplication.Addons"
             xmlns:controls="clr-namespace:CsGrafeqApplication.Controls"
             xmlns:properties="clr-namespace:CsGrafeqApplication.Properties"
             xmlns:csgrafeqapp="clr-namespace:CsGrafeqApplication"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CsGrafeqApplication.Controls.DisplayerContainer"
             x:DataType="vm:DisplayerContainerViewModel"
			 Focusable="True">
    <UserControl.Styles>
        <Style Selector="Svg.F">
            <Setter Property="Css" Value="{DynamicResource OppositeCssPathFillString}" />
        </Style>
        <Style Selector="Svg.S">
            <Setter Property="Css" Value="{DynamicResource OppositeCssPathStrokeString}" />
        </Style>
    </UserControl.Styles>
    <Panel Name="PART_Container" IsTabStop="False">
        <Panel.Styles>
            <Style Selector="Control">
                <Setter Property="IsTabStop" Value="False" />
            </Style>
            <Style Selector="GridSplitter#Splitter">
                <Setter Property="Background" Value="LightGray" />
                <Style Selector="^ Border">
                    <Setter Property="Width" Value="{CompiledBinding SplitterThicknessOff}" />
                    <Setter Property="Transitions">
                        <Transitions>
                            <DoubleTransition Property="Width" Duration="0:0:0.1" />
                        </Transitions>
                    </Setter>
                </Style>
                <Style Selector="^:pointerover Border">
                    <Setter Property="Width" Value="{CompiledBinding SplitterThicknessOn}" />
                </Style>
                <Style Selector="^:pressed Border">
                    <Setter Property="Width" Value="{CompiledBinding SplitterThicknessOn}" />
                </Style>
            </Style>
        </Panel.Styles>
        <Border Name="DisplayerCon" ZIndex="0" BorderThickness="0">
            <ContentPresenter Content="{CompiledBinding Displayer}" />
        </Border>
        <Grid ZIndex="1" Name="PART_Grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="6" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderThickness="0" BorderBrush="Gray" Name="OperationContainer"
                    DataContext="{CompiledBinding Displayer}"
                    Background="{DynamicResource CgBackgroundBrush}">
                <ItemsControl ItemsSource="{CompiledBinding Addons}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="addons:Addon">
                            <Expander Width="{CompiledBinding $parent[ItemsControl].Bounds.Width}"
                                      Height="{CompiledBinding $parent[ScrollViewer].Bounds.Height}"
                                      Padding="0" Margin="0" Classes="NoBorderExpander"
                                      BorderThickness="0">
                                <Expander.Styles>
                                    <Style Selector="Expander.NoBorderExpander">
                                        <Style Selector="^ /template/ ToggleButton#ExpanderHeader">
                                            <Setter Property="BorderThickness" Value="0" />
                                        </Style>
                                        <Style Selector="^  /template/ Border#ExpanderContent">
                                            <Setter Property="BorderThickness" Value="0" />
                                        </Style>
                                    </Style>
                                </Expander.Styles>
                                <Expander.Header>
                                    <TextBlock Text="{CompiledBinding Name}" />
                                </Expander.Header>
                                <ContentPresenter Content="{CompiledBinding .}" />
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" Name="Splitter" Width="1" />
            <Border BorderThickness="0" Grid.Column="2" Name="PART_CoverDisplayer">
                <CheckBox Width="15" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left"
                          Name="Toggle">
                    <CheckBox.Template>
                        <ControlTemplate>
                            <Border>
                                <Border Name="Border" CornerRadius="4" BorderThickness="0"
                                        Background="{DynamicResource HTMedianBrush}"
                                        VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Name="TextBlock" MinWidth="0" MinHeight="0"
                                               VerticalAlignment="Center" HorizontalAlignment="Center" />
                                </Border>
                            </Border>
                        </ControlTemplate>
                    </CheckBox.Template>
                    <CheckBox.Styles>
                        <Style Selector="CheckBox TextBlock#TextBlock">
                            <Setter Property="Text" Value="&lt;" />
                        </Style>
                        <Style Selector="CheckBox:checked TextBlock#TextBlock">
                            <Setter Property="Text" Value="&gt;" />
                        </Style>
                        <Style Selector="CheckBox Border#Border">
                            <Setter Property="Width" Value="15" />
                            <Setter Property="Height" Value="40" />
                        </Style>
                        <Style Selector="CheckBox:pressed Border#Border">
                            <Setter Property="Width"
                                    Value="13" />
                            <Setter Property="Height"
                                    Value="38" />
                        </Style>
                    </CheckBox.Styles>
                    <CheckBox.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Width" Duration="0:0:0.2" />
                            <DoubleTransition Property="Height" Duration="0:0:0.2" />
                        </Transitions>
                    </CheckBox.Transitions>
                </CheckBox>
            </Border>
        </Grid>
        <Grid ColumnDefinitions="*,52" RowDefinitions="*,52" ZIndex="2" Name="SettingDockPanel"
              VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Border Grid.Column="1" Grid.Row="1">
                <ToggleButton Name="SettingToggle">
                    <ToggleButton.Styles>
                        <Style Selector="ToggleButton">
                            <Style Selector="^:checked">
                                <Setter Property="Template">
                                    <ControlTemplate>
                                        <Border Margin="10" CornerRadius="5"
                                                Background="{StaticResource HTMedianBrush}">
                                            <Svg Path="/Assets/lineup.svg" Width="32" Height="32" Margin="0"
                                                 Classes="F" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter>
                            </Style>
                            <Style Selector="^:unchecked">
                                <Setter Property="Template">
                                    <ControlTemplate>
                                        <Border Margin="10" CornerRadius="5"
                                                Background="{StaticResource HTMedianBrush}">
                                            <Svg Path="/Assets/linedown.svg" Width="32" Height="32" Margin="0"
                                                 Classes="F" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter>
                            </Style>
                        </Style>
                    </ToggleButton.Styles>
                </ToggleButton>
            </Border>
            <Border Grid.Column="0" Grid.Row="1">
                <controls:ShownControl
                    IsShown="{CompiledBinding #SettingToggle.IsChecked,Mode=OneWay}"
                    Margin="0" Padding="0" Duration="0.2" HorizontalAlignment="Right" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" Name="SettingStackPanelHor"
                                Spacing="5" Margin="0" HorizontalAlignment="Stretch">
                        <StackPanel.Styles>
                            <Style Selector="Button">
                                <Setter Property="Background" Value="{StaticResource HTMedianBrush}" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="CornerRadius" Value="4" />
                                <Setter Property="Margin" Value="0" />
                            </Style>
                            <Style Selector="RepeatButton">
                                <Setter Property="Background" Value="{StaticResource HTMedianBrush}" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="CornerRadius" Value="4" />
                                <Setter Property="Margin" Value="0" />
                            </Style>
                        </StackPanel.Styles>
                        <RepeatButton Click="StepBack_Clicked">
                            <ToolTip.Tip>
								<TextBlock Text="{CompiledBinding MultiLanguageResources.UndoText.Data}"></TextBlock>
                            </ToolTip.Tip>
                            <Svg Path="/Assets/stepback.svg" Width="32" Height="32" Margin="0" Classes="F"  />
                        </RepeatButton>
                        <RepeatButton Click="StepOver_Clicked">
                            <ToolTip.Tip>
                                <TextBlock Text="{CompiledBinding MultiLanguageResources.RedoText.Data}"></TextBlock>
                            </ToolTip.Tip>
                            <Svg Path="/Assets/stepover.svg" Width="32" Height="32" Margin="0" Classes="F" />
                        </RepeatButton>
                        <RepeatButton Click="ZoomOut_Clicked">
                            <ToolTip.Tip>
                                <TextBlock Text="{CompiledBinding MultiLanguageResources.ZoomOutText.Data}"></TextBlock>
                            </ToolTip.Tip>
                            <Svg Path="/Assets/zoomout.svg" Width="32" Height="32" Margin="0" Classes="S" />
                        </RepeatButton>
                        <RepeatButton Click="ZoomIn_Clicked">
                            <ToolTip.Tip>
                                <TextBlock Text="{CompiledBinding MultiLanguageResources.ZoomInText.Data}"></TextBlock>
                            </ToolTip.Tip>
                            <Svg Path="/Assets/zoomin.svg" Width="32" Height="32" Margin="0" Classes="S" />
                        </RepeatButton>
                        <Button Click="Delete_Clicked">
                            <ToolTip.Tip>
                                <TextBlock Text="{CompiledBinding MultiLanguageResources.DeleteText.Data}"></TextBlock>
                            </ToolTip.Tip>
                            <Svg Path="/Assets/trash.svg" Width="32" Height="32" Margin="0" Classes="S" />
                        </Button>
                        <Button Click="SelectAll_Clicked">
                            <ToolTip.Tip>
                                <TextBlock Text="{CompiledBinding MultiLanguageResources.SelectAllText.Data}"></TextBlock>
                            </ToolTip.Tip>
                            <Svg Path="/Assets/selectall.svg" Width="32" Height="32" Margin="0" Classes="F"/>
                        </Button>
                        <Button Click="DeSelectAll_Clicked">
                            <ToolTip.Tip>
                                <TextBlock Text="{CompiledBinding MultiLanguageResources.DeselectAllText.Data}"></TextBlock>
                            </ToolTip.Tip>
                            <Svg Path="/Assets/deselectall.svg" Width="32" Height="32" Margin="0" Classes="F" />
                        </Button>
                    </StackPanel>
                </controls:ShownControl>
            </Border>
            <Border Grid.Column="1" Grid.Row="0">
                <controls:ShownControl VerticalAlignment="Bottom" Orientation="Vertical"
                                       IsShown="{CompiledBinding #SettingToggle.IsChecked,Mode=OneWay}"
                                       Margin="0" Padding="0" Duration="0.2">
                    <StackPanel Orientation="Vertical" Name="SettingStackPanel"
                                Spacing="5" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                        <StackPanel.Styles>
                            <Style Selector="Button">
                                <Setter Property="Background" Value="{StaticResource HTMedianBrush}" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="CornerRadius" Value="4" />
                                <Setter Property="Margin" Value="0" />
                            </Style>
                            <Style Selector="RepeatButton">
                                <Setter Property="Background" Value="{StaticResource HTMedianBrush}" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="CornerRadius" Value="4" />
                                <Setter Property="Margin" Value="0" />
                            </Style>
                        </StackPanel.Styles>
                        <Button Click="Setting_Clicked">
                            <ToolTip.Tip>
                                <TextBlock Text="{CompiledBinding MultiLanguageResources.SettingText.Data}"></TextBlock>
                            </ToolTip.Tip>
                            <Svg Path="/Assets/setting.svg" Width="32" Height="32" Margin="0" Classes="F" />
                        </Button>
                        <Button>
                            <ToolTip.Tip>
                                <TextBlock Text="{CompiledBinding MultiLanguageResources.LanguageText.Data}"></TextBlock>
                            </ToolTip.Tip>
                            <Button.Flyout>
                                <Flyout Placement="Left">
                                    <ComboBox SelectedIndex="{x:Static csgrafeqapp:Languages.CurrentLanguageIndex}" SelectionChanged="LanguageSelectionChanged">
                                        <ComboBoxItem><TextBlock Text="en-us (English)"/></ComboBoxItem>
                                        <ComboBoxItem><TextBlock Text="zh-hans (Chinese)"/></ComboBoxItem>
                                    </ComboBox>
                                </Flyout>
                            </Button.Flyout>
                            <Svg Path="/Assets/language.svg" Width="32" Height="32" Margin="0" Classes="F" />
                        </Button>
                    </StackPanel>
                </controls:ShownControl>
            </Border>
        </Grid>
        <Border ZIndex="3" Name="PopupBack">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*" />
                    <ColumnDefinition Width="60*" MaxWidth="600" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="60*" MaxHeight="400" />
                    <RowDefinition Height="20*" />
                </Grid.RowDefinitions>
                <Border Name="MsgBoxContainer" Grid.Row="1" Grid.Column="1" CornerRadius="10"
                        Background="{DynamicResource HTMedianBrush}" VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch" IsVisible="False">
                    <DockPanel LastChildFill="True">
                        <Button Click="Button_OnClick" HorizontalAlignment="Right" Width="60" Height="30"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="40,10"
                                DockPanel.Dock="Bottom" Content="OK" Background="{DynamicResource CgBackgroundBrush}" />
                        <Border Name="ContentContainer" Padding="40" Background="{DynamicResource CgBackgroundBrush}"
                                Margin="15" CornerRadius="5" />
                    </DockPanel>
                </Border>
                <Border Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Background="{DynamicResource HTMedianBrush}" Padding="15" Opacity="0" CornerRadius="4">
                    <ContentPresenter Name="InfoPresenter" Foreground="{DynamicResource CgForegroundBrush}" />
                </Border>
            </Grid>
        </Border>
    </Panel>
</UserControl>