<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:CsGrafeqApplication.Controls">
    <Design.PreviewWith>
        <controls:ShownControl />
    </Design.PreviewWith>

    <Style Selector="controls|ShownControl">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <ContentPresenter Content="{TemplateBinding Child}" />
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>