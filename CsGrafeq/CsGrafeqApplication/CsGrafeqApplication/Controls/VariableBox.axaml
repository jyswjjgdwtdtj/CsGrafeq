<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CsGrafeqApplication.ViewModels"
             xmlns:addons="clr-namespace:CsGrafeqApplication.Addons"
             xmlns:geopad="clr-namespace:CsGrafeqApplication.Addons.GeometryPad"
             xmlns:controls="clr-namespace:CsGrafeqApplication.Controls"
             xmlns:csgrafeqapp="clr-namespace:CsGrafeqApplication"
             xmlns:cmavalonia="clr-namespace:CSharpMath.Avalonia;assembly=CSharpMath.Avalonia"
             xmlns:i18N="clr-namespace:CsGrafeq.I18N;assembly=CsGrafeq.I18N"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CsGrafeqApplication.Controls.VariableBox" Name="UserControl">
    <UserControl.Styles>
        
    <Style Selector="controls|VariableBox">
        <Setter Property="Margin" Value="5" />
        <Setter Property="ClipToBounds" Value="False"></Setter>
        <Setter Property="Height" Value="70"></Setter>
    </Style>
    </UserControl.Styles>
                <StackPanel Orientation="Vertical" Spacing="5" ClipToBounds="False">
                    <StackPanel Orientation="Horizontal" ClipToBounds="False">
                        <TextBlock Text="{CompiledBinding #UserControl.VariableName}" VerticalAlignment="Center" />
                        <TextBlock Text=" = " VerticalAlignment="Center" />
                        <TextBox VerticalAlignment="Center" Text="{CompiledBinding #UserControl.Value}" Name="ValueTextBox"
                                 HorizontalContentAlignment="Center" Width="NaN"  TemplateApplied="TemplateAppliedHandler">
                            <TextBox.Styles><FluentTheme/></TextBox.Styles>
                        </TextBox>
                    </StackPanel>
                    <DockPanel LastChildFill="True">
                        <TextBox Text="{CompiledBinding #UserControl.Min}" Width="NaN" DockPanel.Dock="Left" AcceptsReturn="False"
                                 AcceptsTab="False" MinWidth="0"
                                 VerticalAlignment="Center" Name="RangeMinimum" TemplateApplied="TemplateAppliedHandler" >
                            <TextBox.Styles><FluentTheme/></TextBox.Styles>
                        </TextBox>
                        <TextBox Text="{CompiledBinding #UserControl.Max}" Width="NaN" DockPanel.Dock="Right" AcceptsReturn="False"
                                 AcceptsTab="False" MinWidth="0"
                                 VerticalAlignment="Center" Name="RangeMaximum"  TemplateApplied="TemplateAppliedHandler">
                            <TextBox.Styles><FluentTheme/></TextBox.Styles>
                        </TextBox>
                        <Slider Name="PART_Slider" Minimum="{CompiledBinding #UserControl.Min}" Maximum="{CompiledBinding #UserControl.Max}"
                                Orientation="Horizontal" Value="{CompiledBinding #UserControl.Value}" Margin="20,0"/>
                    </DockPanel>
                </StackPanel>
</UserControl>