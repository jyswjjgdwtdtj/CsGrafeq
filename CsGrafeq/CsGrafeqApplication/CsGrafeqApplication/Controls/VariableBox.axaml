<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:CsGrafeqApplication.Controls">

    <!--
    Additional resources 
    Using Control Themes:
         https://docs.avaloniaui.net/docs/basics/user-interface/styling/control-themes
    Using Theme Variants:
         https://docs.avaloniaui.net/docs/guides/styles-and-resources/how-to-use-theme-variants
  -->
    <Design.PreviewWith>
        
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type controls:VariableBox}" TargetType="controls:VariableBox">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" DataContext="{TemplateBinding MySliderData}">
                        <TextBlock Text="{TemplateBinding ValueName}" VerticalAlignment="Center" />
                        <TextBlock Text=" = " VerticalAlignment="Center" />
                        <TextBox VerticalAlignment="Center" Text="{CompiledBinding Value}" Name="ValueTextBlock"  x:DataType="controls:SliderData"/>
                    </StackPanel>
                    <DockPanel LastChildFill="True" DataContext="{TemplateBinding MySliderData}">
                        <TextBox Text="{CompiledBinding Min}" Width="NaN" DockPanel.Dock="Left" AcceptsReturn="False" AcceptsTab="False" MinWidth="0"
                                   VerticalAlignment="Center" Name="RangeMinimum" x:DataType="controls:SliderData" />
                        <TextBox Text="{CompiledBinding Max}" Width="NaN" DockPanel.Dock="Right" AcceptsReturn="False" AcceptsTab="False" MinWidth="0"
                                   VerticalAlignment="Center" Name="RangeMaximum" x:DataType="controls:SliderData" />
                        <Slider Name="PART_Slider" Minimum="{CompiledBinding Min}" Maximum="{CompiledBinding Max}"
                                Orientation="Horizontal" Value="{CompiledBinding Value,Mode=TwoWay}" Margin="5,0"
                                x:DataType="controls:SliderData" />
                    </DockPanel>
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>