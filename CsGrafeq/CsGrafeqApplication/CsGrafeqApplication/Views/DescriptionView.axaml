<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:CsGrafeqApplication.Core.ViewModel;assembly=CsGrafeqApplication.Core"
             xmlns:controls="clr-namespace:CsGrafeqApplication.Core.Controls;assembly=CsGrafeqApplication.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CsGrafeqApplication.Views.DescriptionView"
             x:DataType="viewModel:ViewModelBase">
    <UserControl.Styles>
        <StyleInclude Source="avares://LiveMarkdown.Avalonia/Styles.axaml" />
    </UserControl.Styles>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
        <controls:Markdown xml:space="preserve" Content="{CompiledBinding MultiLanguageResources.ReadmeText.Data}" />
    </ScrollViewer>
</UserControl>